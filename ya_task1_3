m = 'tzkkkzzzzzsss'

lenm = len(m) #получаем длину списка
i = 0 #переменная для задания цикла, для обращения к списку m
lenmem = 0 #переменная, в которой будет накапливаться и храниться текущее кол-во повторяющихся символов
lenmx = 0 #переременная, в которой будет храниться максимальное число повторяющихся подряд символов
j = 0

for i in range(lenm):
    if i + 1 < lenm:   #рассматриваем список без последнего элемента
         if m[i] == m[i + 1]:  #проверяем элементы списка на повторяемость
                j += 1         #если элементы повторяются, инкрементируем их кол-во
         elif m[i] != m[i + 1]: #повторяющиеся эл-ты закончились
               lenmem = j+1     #сохраняем кол-во повторяющихся эл-тов в переменную. "+1" - костыль
               j=0
         # else:
         #     lenmem = j + 1
         #     j = 0
    else:
         if m[i] == m[i - 1]: #оцениваем последний элемент списка на предмет повторяемости за предпоследним
                        j += 1
                        lenmem = j #сохраняем кол-во повторяющихся эл-тов в переменную
                        j=0
    if lenmx < lenmem: #сравниваем текущее накопленное кол-во повторений с сохраненным максимальным.
        lenmx = lenmem #Перезаписывем максимальное кол-во, если текущее больше.

#print('Lenght =', lenm,'Lastlen =', lenmem,'Lmax =', lenmx) #эта строка нужна мне, она не входит в условия задачи
print(m, '->', lenmx)
